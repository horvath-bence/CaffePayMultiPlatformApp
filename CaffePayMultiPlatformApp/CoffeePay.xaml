<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CaffePayMultiPlatformApp.CoffeePay">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        
        <Label 
            x:Name="CreditsLb"
            Text="You have 0 Ft"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="PayOneCoffeeBtn"
            Text="Pay one Coffee"
            SemanticProperties.Hint="Pay coffee"
            Clicked="PayOneCoffee" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
